<%= form_tag("/videos/"+params[:id]+"/edit", method: "put") do %>
  <%= label_tag('video[title]', "Title:") %>
  <%= text_field(:video, :title) %><br>

  <%= label_tag('video[description]', "Description:") %>
  <%= text_field(:video, :description) %><br>

  <%= label_tag('video[youtube_id]', "Youtube ID:") %>
  <%= text_field(:video, :youtube_id) %><br>

  <%= submit_tag("submit") %>
<% end %>